                        <a href="{{ product.url }}"> <img src="{{ product | img_url: "medium" }}" alt=""></a>
                        <div class="l-pro-sale">
                            <img src="https://cdn.shopify.com/s/files/1/0263/2689/2590/files/sale-img.png?v=1645426032" alt="">
                        </div>
                    </div>
                    <div class="l-pro-text">
                        <h4>
                            <a href="{{ product.url }}">{{ product.title }}</a>
                        </h4>
                        <p>{{ product.price | money }} <span>{{product.compare_at_price | money }}</span></p>
                    </div>
                </div>
               
              {% endfor %}

            </div>
        </section>
         
