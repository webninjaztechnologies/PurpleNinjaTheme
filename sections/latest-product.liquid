            </div>
          </section>
          <section id="dunkles" class="tab-panel">
            <div class="l-pro-body d-flex">
                {% assign collection = collections['Featured']%}
            
              
              {% for product in collections[section.settings.featured].products %}
                <div class="l-pro-content">
                    <div class="l-pro-img">
                        <a href="{{ product.url }}"> <img src="{{ product | img_url: "medium" }}" alt=""></a>
